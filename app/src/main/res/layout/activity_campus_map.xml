<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".campus.CampusMapActivity">

    <!-- Fragment pentru Google Maps (full screen) -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/mapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Toolbar SIMPLU sus - FÄ‚RÄ‚ BUTON LOGOUT -->
    <LinearLayout
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#6200EE"
        android:elevation="12dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Campus UPT"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Buton flotant pentru ORARE (jos centru) -->
    <Button
        android:id="@+id/openScheduleButton"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#4CAF50"
        android:elevation="16dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:text="ðŸ“… VEZI ORARUL"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Card informativ mic -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/topAppBar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="#CCFFFFFF"
        android:elevation="6dp"
        android:padding="12dp"
        android:text="â„¹ï¸ ApasÄƒ markerul VERDE\npentru modelul 3D"
        android:textColor="#424242"
        android:textSize="12sp" />

    <!-- Views ascunse pentru compatibilitate -->
    <EditText android:id="@+id/timeEditText" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
    <EditText android:id="@+id/courseEditText" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
    <EditText android:id="@+id/facultyEditText" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
    <EditText android:id="@+id/roomEditText" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
    <EditText android:id="@+id/floorEditText" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
    <Button android:id="@+id/addScheduleButton" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
    <TextView android:id="@+id/emptyStateTextView" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/scheduleRecyclerView" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />

</RelativeLayout>
